{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@data/*": ["data/*"],
      "@assets/*": ["assets/*"],
      "@app/*": ["app/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@context/*": ["context/*"],
      "@middleware/*": ["middleware/*"],
      "@pages/*": ["pages/*"],
      "@api/*": ["pages/api/*"],
      "@types/*": ["types/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
